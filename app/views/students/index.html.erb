<h1>MDL 252</h1>
<div class="student-table">
	<% @row_counter = 0 %>
	<% @students.each do |student| %>
		<% if @row_counter == 0 %>
			<div class="row">
		<% end %>
		<% @row_counter+=1 %>
		<div class="two columns profile">
			<div>
				<%#= link_to picture(student), '#'%>
				<a href='#' class="toggle" gumby-trigger="#<%=student.last_name%>infodrawer"><%=picture(student)%></a>
				<%#Make helper to | the rest of the students %>
			</div>
			<div class="drawer" id="<%=student.last_name%>infodrawer">
				<%= "#{student.first_name} #{student.last_name}" %>
				<div class="mini-button-row">
					<div class="small danger btn pretty">
						<a href="#">PEW</a>
					</div>
					<div class="small primary btn pretty">
						<a href="#">zzz...</a>
					</div>
				</div>
			</div>
		</div>
		<% if @row_counter == 6 %>
			</div>
			<% @row_counter = 0 %>
		<% end %>
	<% end %>
</div>

<p style="margin-top: 50px;">Sort by:</p>

<div class="sorting-buttons">
	<div class="medium primary btn">
	  <%= link_to "A <i class='icon-right-thin'></i> Z".html_safe, sort: "last_name" %>
	</div>
	<div class="medium primary btn">
	  <%= link_to "ICM", sort: "icm, last_name" %>
	</div>
	<div class="medium primary btn">
	  <%= link_to "Top Gunner", sort: "score, last_name" %>
	</div>
</div>

